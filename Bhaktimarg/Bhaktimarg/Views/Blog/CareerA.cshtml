@model List<Bhaktimarg.Models.Menu>
@{
    Layout = null;
}


<section class="sublist">
    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="sublist-card">
                    <h4>Available Lists</h4>
                    <ul>
                        @foreach (var data in Model)
                        {
                            <li>
                                <div class="dropdown-2" onclick="ClickButton(@data.Id)">
                                    @data.Name
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</section>
<script src="~/Content/js/jquery.min.js"></script>
<script>
    function ClickButton(request) {

        var Type = request;
        if (Type == 1) {
            window.location.href = '/Logout';
        }
        if (Type == 2) {
            window.location.href = '/EnquiryList';
        }
        if (Type == 3) {
            window.location.href = '/Product-list';
        }
    }
</script>
<style>
    .sublist-card {
        font-size: 27px;
        border: 3px solid #cf1515;
        padding: 40px;
        text-align: center;
        width: 250px;
        margin: auto;
        font-family: arial;
        border-radius: 15px;
    }
        .sublist-card li {
            text-align: left;
            padding: 9px 14px;
            list-style: none;
            margin-bottom: 11px;
            font-size: 25px;
            border-radius: 10px;
            cursor: pointer;
            background: #c9e2e9;
        }
    h4 {
        padding: 20px;
        margin: 0;
        background: #c72a2a;
        color: white;
    }
    ul {
        padding-left: 0;
    }
</style>