@model Bhaktimarg.Models.blogdto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddBlog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <ul class="nav navbar-btn">
        <li>
            <a href="/Logout" class="btn btn-primary btn-lg">Logout</a>
        </li>
        <li>
            <a href="/Product-list" class="btn btn-primary btn-lg">Contactus</a>
        </li>
        <li>
            <a href="Product-list" class="btn btn-primary btn-lg">Blogs </a>
        </li>
    </ul>
    <h2>Add Blog</h2>
    @using (Html.BeginForm("AddIndex", "blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container">
            <div class="form-group">
                @Html.HiddenFor(x => x.ID)
                <label>URL</label>
                @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Title</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Meta Tag</label>
                @Html.TextAreaFor(x => x.MetaTag, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>IsActive</label>
                @Html.CheckBoxFor(x => x.IsActive)
            </div>
            <div class="form-group">
                <label>Image</label>
                @Html.TextBoxFor(x => x.Image, new { @class = "form-control", @type = "file" }) <br />
            </div>
            <div class="form-group">
                <label>Short Description</label>
                @Html.TextAreaFor(x => x.ShortDescription, new { @id = "ShortDescription", @class = "form-control", @rows = "200" })

            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextAreaFor(x => x.Description, new { @id = "FullDescription", @class = "form-control", @rows = "200" })

            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

    }
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("FullDescription");
        CKEDITOR.replace("ShortDescription");
    </script>

</body>
</html>
